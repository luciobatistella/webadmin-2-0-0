rules_version = '2';

// Regras de segurança do Firebase Storage para EventosSP
service firebase.storage {
  match /b/{bucket}/o {
    
    // Uploads de documentos não autenticados (cadastro inicial de cooperados)
    match /uploads/anon/{docType}/{fileName} {
      // Permite leitura pública
      allow read: if true;
      
      // Permite escrita apenas de arquivos com menos de 10MB
      allow write: if request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*|application/pdf');
    }
    
    // Uploads de cooperados autenticados
    match /uploads/{cooperadoId}/{docType}/{fileName} {
      // Permite leitura pública (para visualização de documentos)
      allow read: if true;
      
      // Permite escrita apenas para usuários autenticados
      // E apenas arquivos com menos de 10MB
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*|application/pdf');
    }
    
    // Nega acesso a qualquer outro caminho
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
